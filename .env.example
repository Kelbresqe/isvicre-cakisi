# =============================================================================
# İsviçre Çakısı - Environment Variables Template
# v0.9.0
# =============================================================================
# Copy this file to .env and modify as needed:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Environment: dev, staging, prod
ENV=dev

# Debug mode (true/false)
DEBUG=true

# Enable API documentation endpoints
DOCS_ENABLED=true
REDOC_ENABLED=true

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------

# Maximum requests per IP per minute
MAX_REQUESTS_PER_MINUTE=60

# Maximum upload MB per IP per hour
MAX_UPLOAD_MB_PER_HOUR=100

# -----------------------------------------------------------------------------
# File Size Limits
# -----------------------------------------------------------------------------

# Maximum image upload size in MB
MAX_IMAGE_SIZE_MB=10

# Maximum PDF upload size in MB
MAX_PDF_SIZE_MB=25

# Maximum text input size in MB
MAX_TEXT_INPUT_MB=1

# -----------------------------------------------------------------------------
# Cache Settings
# -----------------------------------------------------------------------------

# LRU cache size for text-based tools
TEXT_TOOL_CACHE_SIZE=100

# -----------------------------------------------------------------------------
# Monitoring (Optional - for docker-compose with monitoring profile)
# -----------------------------------------------------------------------------

# Grafana admin credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =============================================================================
# Production Settings (uncomment for production)
# =============================================================================

# ENV=prod
# DEBUG=false
# DOCS_ENABLED=false
# REDOC_ENABLED=false
# MAX_REQUESTS_PER_MINUTE=30
# MAX_UPLOAD_MB_PER_HOUR=50
